<UserControl x:Class="屏幕管理.DownloadControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:屏幕管理"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ProgressBar x:Name="progress" Height="20" VerticalAlignment="Bottom"/>
        <Label x:Name="titleLabel" Content="Label" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="30" Margin="0,0,0,80" FontSize="18" FontWeight="Bold"/>
        <Label x:Name="statusLabel" Content="Label" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="30" Margin="0,0,0,30"/>
    </Grid>
</UserControl>
