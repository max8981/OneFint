<Window x:Class="TestWpf.DownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWpf"
        mc:Ignorable="d"
        Title="DownloadWindow" Height="450" Width="800">
    <Grid Margin="0,0,5,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="404*"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="panel" Grid.Row="1"/>
        <TextBox x:Name="urlTextBox" Margin="5,0,0,0" TextWrapping="Wrap" Text="" Width="683" VerticalAlignment="Center" HorizontalAlignment="Left" Height="18"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="752,0,0,0" VerticalAlignment="Center" Height="20" Width="43" Click="Button_Click"/>

    </Grid>
</Window>
