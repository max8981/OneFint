<UserControl x:Class="Client_Wpf.CustomControls.DownloadProgressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client_Wpf.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="40">
    <Grid x:Name="grid">
        <Label x:Name="fileNameLabel" Content="Label" HorizontalAlignment="Left" Margin="0,0,0,15" VerticalAlignment="Bottom"/>
        <Label x:Name="downloadInfoLabel" Content="Label" HorizontalAlignment="Right" Margin="0,0,0,15" VerticalAlignment="Bottom"/>
        <ProgressBar x:Name="downloadProgressBar" VerticalAlignment="Bottom" Height="15"/>
    </Grid>
</UserControl>
