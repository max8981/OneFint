<UserControl x:Class="VR文旅.Controls.SplitButtomControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VR文旅.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="72.213" d:DesignWidth="334.037">
    <Grid x:Name="grid">
        <Border x:Name="border" CornerRadius="40" BorderThickness="2,2,0,0" Background="White" >
            <Grid x:Name="borderGrid" Margin="40,0,40,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition x:Name="imageCol" Width="30*"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="comboBox" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="0"/>
                <Label x:Name="label" Content="Content" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <Image x:Name="image" Margin="3,3,3,3" Grid.Column="2" />
            </Grid>
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="Gray"/>
            </Border.Effect>
        </Border>
    </Grid>
</UserControl>
