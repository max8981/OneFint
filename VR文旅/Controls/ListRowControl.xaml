<UserControl x:Class="VR文旅.Controls.ListRowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VR文旅.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" MinWidth="50"/>
            <ColumnDefinition Width="15*" MinWidth="80"/>
            <ColumnDefinition Width="25*" MinWidth="120"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="province" />
        <Label x:Name="scenarioCategory" Grid.Column="1" />
        <Label x:Name="scenarioName" Grid.Column="2" />
        <Label x:Name="description" Grid.Column="3" />
        <Border BorderBrush="Black" BorderThickness="1,1,1,1"/>
        <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1,1,1,1"/>
        <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1,1,1,1"/>
        <Border Grid.Column="3" BorderBrush="Black" BorderThickness="1,1,1,1"/>
    </Grid>
</UserControl>
